<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.bakery.product.mapper.ProductMapper">
 	<insert id="insertProduct" parameterType="map">
 		INSERT INTO `product`
 		(
	 		`productName`
			,`imagePath`
			,`stock`
			,`costPrice`
			,`sellingPrice`
			,`category`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{productName}
 			,#{imagePath}
 			,#{stock}
 			,#{costPrice}
 			,#{sellingPrice}
 			,#{category}
 			,NOW()
 			,NOW()
 			
 		)
 	</insert>
 	
 	<select id="selectProduct" resultType="com.bakery.product.domain.Product">
 		SELECT
 			`id`
 			,`productName`
			,`imagePath`
			,`stock`
			,`costPrice`
			,`sellingPrice`
			,`category`
		FROM
			`product`
 			
 	</select>
 	
 	<select id="selectProductById" parameterType="int" resultType="com.bakery.product.domain.Product">
 		SELECT
 			`id`
 			,`productName`
			,`imagePath`
			,`stock`
			,`costPrice`
			,`sellingPrice`
			,`category`
		FROM
			`product`
		WHERE
			`id` = #{productId}
 	</select>
 	
 	<update id="updateProductByProductId" parameterType="map">
 		UPDATE `product`
   		SET
   			`productName` = #{productName}
			,`imagePath` = #{imagePath}
			,`stock` = #{stock}
			,`costPrice` = #{costPrice}
			,`sellingPrice` = #{sellingPrice}
			,`category` = #{category}
			,`updatedAt` = NOW()
		WHERE
			`id` = #{productId}
 	</update>
 	
 	<delete id="deleteProductByProductId" parameterType="int">
 		DELETE FROM `product`
 		WHERE
 			`id` = #{productId}
 	</delete>
 	
 	<select id="selectAll" resultType="com.bakery.product.domain.Product">
 		SELECT * FROM `product`
 	</select>
 	
 	<update id="updateBuyCount" parameterType="map"> 
 		UPDATE `product`
   		SET
   			`buyCount` = #{buyCount}
   		WHERE
   			`id` = #{productId}
 	</update>
 </mapper>